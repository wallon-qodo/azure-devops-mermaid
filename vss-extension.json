{
    "manifestVersion": 1,
    "id": "ado-mermaid-viewer",
    "version": "2.1.4",
    "name": "ADO Mermaid Viewer",
    "description": "Professional Mermaid diagram renderer with GitHub Flavored Markdown support for Azure DevOps",
    "public": true,
    "publisher": "ADOMermaidViewer",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories": [
        "Azure Repos"
    ],
    "tags": [
        "mermaid",
        "diagrams",
        "markdown",
        "visualization",
        "flowchart",
        "sequence-diagram",
        "gantt",
        "renderer",
        "gfm",
        "tables"
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/wallon-qodo/ado-mermaid-viewer"
    },
    "scopes": [
        "vso.code"
    ],
    "icons": {
        "default": "marketplace/logo.png"
    },
    "contributions": [
        {
            "id": "mermaid-renderer",
            "type": "ms.vss-code-web.content-renderer",
            "description": "Renders Mermaid diagrams in Markdown files with full GFM support",
            "targets": [
                "ms.vss-code-web.content-renderer-collection"
            ],
            "properties": {
                "name": "Mermaid Diagram Renderer",
                "uri": "dist/index.html",
                "fileExtensions": [
                    "md"
                ],
                "mimeTypes": [
                    "text/html"
                ],
                "defaultBehavior": "showRenderedContent",
                "registeredObjectId": "mermaid_renderer"
            }
        },
        {
            "id": "mermaid-pr-tab",
            "type": "ms.vss-web.tab",
            "description": "Displays Mermaid diagrams from PR description",
            "targets": [
                "ms.vss-code-web.pr-tabs"
            ],
            "properties": {
                "name": "Mermaid Diagrams",
                "uri": "dist/pr-tab.html",
                "order": 100
            }
        }
    ],
    "content": {
        "details": {
            "path": "marketplace/overview.md"
        }
    },
    "files": [
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "marketplace",
            "addressable": true
        }
    ]
}
